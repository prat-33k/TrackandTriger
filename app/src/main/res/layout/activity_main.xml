<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    android:background="@drawable/themebg8"
    tools:context=".MainActivity">

<!--    -->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="334dp"
        android:layout_height="193dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:layout_marginBottom="489dp"
        android:fontFamily="serif-monospace"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="  CUSTOMIZE     YOUR          REQUIREMENTS"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="415dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="107dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="72dp"
                android:layout_height="116dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/professionalimg" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="117dp"
                android:layout_weight="1"
                android:text="WORKING PROFESSIONAL" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="101dp"
                android:layout_height="116dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/homemakerlady" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="117dp"
                android:layout_weight="17"
                android:text="HOMEMAKER" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="101dp"
                android:layout_height="116dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/bacheoring" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="117dp"
                android:layout_weight="15"
                android:text="STUDENT" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/reminder"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:layout_marginBottom="55dp"
        android:text="SET REMINDER" />

</RelativeLayout>